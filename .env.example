# ===========================================
# DATABASE
# ===========================================
# Railway will automatically provide DATABASE_URL
# For local development, use PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/facebook_scheduler_db"

# ===========================================
# JWT SECRETS (CRITICAL - Generate strong secrets)
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET="YOUR_STRONG_ACCESS_SECRET_HERE_MINIMUM_64_CHARS"
JWT_REFRESH_SECRET="YOUR_STRONG_REFRESH_SECRET_HERE_MINIMUM_64_CHARS"

# ===========================================
# TOKEN ENCRYPTION (CRITICAL - For encrypting Facebook tokens in DB)
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="YOUR_32_BYTE_ENCRYPTION_KEY_HERE"

# ===========================================
# FACEBOOK API
# ===========================================
FB_GRAPH_VER="v19.0"
# Optional: Facebook App ID if needed
# FB_APP_ID="your_facebook_app_id"
# FB_APP_SECRET="your_facebook_app_secret"

# ===========================================
# GEMINI AI (Optional)
# ===========================================
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL="gemini-2.5-flash-preview-09-2025"

# ===========================================
# SERVER CONFIG
# ===========================================
NODE_ENV="production"
PORT="3000"

# ===========================================
# CORS (Optional - if frontend on different domain)
# ===========================================
# CORS_ORIGIN="https://your-frontend-domain.com"

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ===========================================
# FILE UPLOAD
# ===========================================
MAX_FILE_SIZE="10485760"
UPLOAD_DIR="./uploads"
